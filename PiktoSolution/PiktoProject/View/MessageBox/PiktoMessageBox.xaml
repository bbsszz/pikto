<Window x:Class="Pikto.View.PiktoMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="354" >

    <Grid Background="{StaticResource TertiaryBrush}" Width="auto" Height="auto">
        <TextBlock Text="{Binding Path=Message}" TextWrapping="Wrap" Margin="12,29,0,59" FontSize="20"
                               VerticalAlignment="Center" HorizontalAlignment="Center" Width="308" Height="73" Foreground="White" TextAlignment="Center" />
        <Button Width="80" Style="{StaticResource MenuButtonStyle}" Content="OK" Height="34" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="127,0,125,12" Click="OkButton_Click" />
    </Grid>
</Window>
