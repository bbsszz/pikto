      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="188" d:DesignWidth="408"
	Title="StartLearningPathView">

    <Grid Background="{StaticResource SecondaryBrush}" >
        <Button Content="Start" Margin="99,111,99,29" Name="bStartLearning" Command="{Binding StartLearningPathCmd}" Style="{StaticResource MenuButtonStyle}" />
        <Label Content="Rozpoczynasz naukę - przygotuj piktogramy" Margin="38,37,38,0" Name="lPrepareReminder" VerticalAlignment="Top" Style="{StaticResource SecondaryHeaderLabelStyle}" />
    </Grid>
</Page>
