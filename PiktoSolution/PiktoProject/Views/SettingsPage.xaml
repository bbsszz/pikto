<Page x:Class="Pikto.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="SettingsPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
        <Button Content="Zarządzaj piktogramami" Height="23" HorizontalAlignment="Center" Margin="0,0,0,0" Name="bStartPiktogramsManagementPath" VerticalAlignment="Center" Width="192" Command="{Binding StartPiktogramsManagementPathCmd}" />
        <Button Content="Zarządzaj kategoriami" Height="23" HorizontalAlignment="Center" Margin="0,32,0,0" Name="bStartCategoriesManagementPath" VerticalAlignment="Center" Width="192" Command="{Binding StartCategoriesManagementPathCmd}" />
        <Button Content="Ustawienia kamery" Height="23" HorizontalAlignment="Center" Margin="0,32,0,0" Name="bStartCameraCalibrationPath" VerticalAlignment="Center" Width="192" Command="{Binding StartCameraCalibrationPathCmd}" />
        <Button Content="Wstecz" Height="23" Margin="0,32,0,0" Name="bExit" Width="192" Command="{Binding BackCmd}" />
    </StackPanel>
</Page>
