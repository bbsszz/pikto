<Page x:Class="Pikto.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="MainPage">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
        <Button Content="Rozpocznij naukę" Height="23" HorizontalAlignment="Center" Margin="0,0,0,0" Name="bStartLearningPath" VerticalAlignment="Center" Width="192" Command="{Binding StartLearningPathCmd}" />
        <Button Content="Rozpocznij egzamin" Height="23" HorizontalAlignment="Center" Margin="0,32,0,0" Name="bStartExaminationPath" VerticalAlignment="Center" Width="192" Command="{Binding StartExaminationPathCmd}" />
        <Button Content="Ustawienia" Height="23" HorizontalAlignment="Center" Margin="0,32,0,0" Name="bSettings" VerticalAlignment="Center" Width="192" Command="{Binding SettingsCmd}" />
        <Button Content="Autorzy" Height="23" Name="bAbout" Width="192" Command="{Binding AboutCmd}" Margin="0,32,0,0" />
        <Button Content="Wyjście" Height="23" Margin="0,32,0,0" Name="bExit" Width="192" Command="{Binding ExitCmd}" />
    </StackPanel>
</Page>
